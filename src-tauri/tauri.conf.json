{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Realtr",
	"version": "0.1.0",
	"identifier": "com.gumeq.realtr",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Realtr",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"category": "Productivity",
		"copyright": "Â© 2025 Gumeq",
		"longDescription": "Professional photo management workflow for real estate photography",
		"shortDescription": "Photo workflow management",
		"targets": "all",
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": ""
		},
		"linux": {
			"deb": {
				"depends": []
			}
		},
		"macOS": {
			"frameworks": [],
			"minimumSystemVersion": "10.15"
		}
	},
	"plugins": {
		"updater": {
			"active": true,
			"endpoints": [
				"https://github.com/timdobras/realtor-photo-manager/releases/latest/download/latest.json"
			],
			"dialog": true,
			"pubkey": "YOUR_PUBLIC_KEY_FROM_STEP_ABOVE"
		}
	}
}
