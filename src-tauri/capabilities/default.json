{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		{
			"identifier": "fs:scope",
			"allow": ["$APPDATA/**", "$DESKTOP/**"]
		},
		{
			"identifier": "opener:allow-open-path",
			"allow": [
				{
					"path": "**"
				}
			]
		},
		"core:default",
		"opener:default",
		"fs:default",
		"fs:allow-create",
		"fs:allow-exists",
		"fs:allow-mkdir",
		"fs:allow-read-dir",
		"fs:allow-read-file",
		"fs:allow-remove",
		"fs:allow-rename",
		"fs:allow-write-file",
		"dialog:default",
		"dialog:allow-open",
		"dialog:allow-save",
		"shell:allow-open"
	]
}
